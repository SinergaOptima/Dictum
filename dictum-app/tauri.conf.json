{
  "$schema": "https://schema.tauri.app/config/2.json",
  "productName": "Dictum",
  "version": "0.1.0",
  "identifier": "app.latticelabs.dictum",
  "build": {
    "frontendDist": "../dictum-ui/out",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "if exist ..\\dictum-ui (cd ..\\dictum-ui) else (cd dictum-ui) && npm run dev -- --port 1420",
    "beforeBuildCommand": "if exist ..\\dictum-ui (cd ..\\dictum-ui) else (cd dictum-ui) && npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Dictum",
        "width": 900,
        "height": 640,
        "minWidth": 600,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  }
}
